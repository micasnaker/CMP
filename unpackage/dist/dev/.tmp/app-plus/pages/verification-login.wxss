
.verify-left{
	width: calc(100% - 260rpx);
}
.verify-right{
	padding-left: 20rpx;
}
.verify-btn{
	height: 80rpx;
	line-height: 80rpx;
	font-size: 28rpx;
	width: 240rpx;
	border-radius: 8rpx;
	background: -webkit-gradient(linear,left top, right top,from(#FF978D), to(#FFBB69));
	background: -o-linear-gradient(left,#FF978D, #FFBB69);
	background: linear-gradient(left,#FF978D, #FFBB69);
}
.verify-left,.verify-right{
	float: left;
}
.landing{
	height: 84rpx;
	line-height: 84rpx;
	border-radius: 10rpx;
	font-size: 32rpx;
	background: -webkit-gradient(linear,left top, right top,from(#4286de), to(#5091e6));
	background: -o-linear-gradient(left,#4286de, #5091e6);
	background: linear-gradient(left,#4286de, #5091e6);
}
.forget-btn{
	padding: 10rpx 20rpx;
	margin-top: 80rpx;
}
.forget-input {
	border: #212a3c 1rpx solid;
	color: #687c99;
	font-size: 28rpx; 
	padding: 10rpx 25rpx;
	height: 70rpx;
	line-height: 70rpx;
	border-radius: 15rpx;
}
.forget-input input::-ms-input-placeholder{
	color: #007AFF;
}
.forget-margin-b{
	margin-bottom: 25rpx;
}
.forget-input{
	overflow: auto;
}
.forget-card{
	border-radius: 12rpx;
	position: relative;
	padding: 20rpx 25rpx;
}

